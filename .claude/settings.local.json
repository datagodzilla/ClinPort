{
  "permissions": {
    "allow": [
      "Read(/Users/Wolverine/agent-ai/**)",
      "Write(/Users/Wolverine/agent-ai/profiles/notebooklm/**)",
      "Bash(chmod:*)",
      "Bash(yt-dlp:*)",
      "Bash(pip3 install:*)",
      "Bash(python3:*)",
      "Bash(.venv/bin/python:*)",
      "Bash(.venv/bin/pip:*)",
      "Bash(source .venv/bin/activate:*)",
      "Bash(.venv/bin/streamlit:*)",
      "Bash(.venv/bin/mlflow:*)",
      "Bash(.venv/bin/jupyter:*)",
      "Bash(.venv/bin/pytest:*)",
      "Bash(.venv/bin/edge-tts:*)",
      "Bash(.venv/bin/uvicorn:*)",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_snapshot",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_hover",
      "mcp__playwright__browser_drag",
      "mcp__playwright__browser_type",
      "mcp__playwright__browser_fill_form",
      "mcp__playwright__browser_press_key",
      "mcp__playwright__browser_select_option",
      "mcp__playwright__browser_file_upload",
      "mcp__playwright__browser_handle_dialog",
      "mcp__playwright__browser_evaluate",
      "mcp__playwright__browser_wait_for",
      "mcp__playwright__browser_tabs",
      "mcp__playwright__browser_navigate_back",
      "mcp__playwright__browser_network_requests",
      "mcp__playwright__browser_console_messages",
      "mcp__playwright__browser_resize",
      "mcp__playwright__browser_install",
      "mcp__playwright__browser_close",
      "Bash(python:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Read|WebFetch|WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/research-logger.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/enhance-markdown.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__playwright__browser_take_screenshot",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/screenshot-logger.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/notify-completion.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-summary.sh",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "/Users/Wolverine/Library/Caches/ms-playwright"
      }
    }
  }
}
